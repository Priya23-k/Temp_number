<div class="country-list-container">
    <h2>Add New Country</h2>

    <form action="/admin/country/add" method="POST" enctype="multipart/form-data" class="country-form">
        <div class="form-group">
            <label for="countryName">Country Name</label>
            <input type="text" id="countryName" name="countryName" required placeholder="Enter country name" />
        </div>

        <div class="form-group">
            <label for="countryCode">Country Code</label>
            <input type="text" id="countryCode" name="countryCode" required placeholder="Enter country code" />
        </div>

        <div class="form-group">
            <label for="countryFlag">Country Flag</label>
            <input type="file" id="countryFlag" name="countryFlag" accept="image/*" required />
        </div>

        <div class="form-group">
            <label for="countryDescription">Country Description</label>
            <textarea id="countryDescription" name="countryDescription" rows="4" required placeholder="Enter country description"></textarea>
        </div>

        <div class="form-group">
            <button type="submit" class="submit-btn">Add Country</button>
        </div>
    </form>
</div>
