<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Transaction History</title>
  <link rel="icon" href="/image/logo.png" type="image/png">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
  <link rel="stylesheet" href="/css/styles.css"> 
  <link rel="stylesheet" href="/css/app.css">
  <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
        }
        .transactions-container {
            max-width: 800px;
            margin: 45px auto;
            background: #fff;
            top: 20px;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1);
        }
        .btn-download {
            background-color: #9948c5;
            color: white;
            border-radius: 8px;
            padding: 10px 15px;
            font-size: 16px;
            font-weight: bold;
        }
        .btn-download:hover {
            background-color: #7b3f9b;
            color: white;
        }
        .btn-download i {
            margin-right: 8px;
        }
        table {
            width: 100%;
            margin-top: 20px;
        }
        th {
            background-color: #f1f1f1;
            text-align: left;
            padding: 10px;
        }
        td {
            padding: 10px;
            vertical-align: middle;
        }
        .transaction-id {
            color: #ff7f32;
            font-weight: bold;
        }
        .amount {
            font-weight: bold;
        }
        .amount.credit {
            color: rgb(3, 255, 3);
        }
        .amount.debit {
            color: red;
        }
    </style>
</head>
<body>
    <%- include('../../components/app_navbar') %>

    <div class="transactions-container">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="fw-bold">Transactions</h2>
                <p class="text-muted">All your past transactions are below</p>
            </div>
            <a href="/app/transactions/export" class="btn btn-download">
                <i class="fas fa-download"></i> Download CSV
            </a>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Date</th>
                    <th>Details</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>
                <% if (transactions.length > 0) { %>
                    <% transactions.forEach(transaction => { %>
                        <tr>
                            <td class="transaction-id">ðŸ“„ <%= transaction._id %></td>
                            <td><%= transaction.createdAt.toLocaleDateString() %></td>
                            <td><%= transaction.type === "credit" ? "Funds Added" : "Funds Used" %></td>
                            <td class="amount <%= transaction.type === 'credit' ? 'credit' : 'debit' %>">
                                <%= transaction.type === "credit" ? "+" : "-" %>$<%= transaction.amount %>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="4" class="text-center">No transactions found.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
    <script></script>
    <script src="/js/script.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>