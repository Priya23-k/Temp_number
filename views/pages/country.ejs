// Function to get query parameter from the URL
function getQueryParam(param) {
    const urlParams = new URLSearchParams(window.location.search);
    return urlParams.get(param);
}

// Redirect function
function redirectToCombine(serviceid) {
    const countryid = getQueryParam('countryid'); // Get countryid from URL

    if (!countryid) {
        console.error("Country ID not found in the URL.");
        alert("Please select a country first."); // Optional: Alert the user
        return;
    }

    // Construct the URL for redirection
    const url = `/views/combine.ejs?serviceid=${serviceid}&countryid=${countryid}`;
    window.location.href = url;
}

