    <!-- Temp Number Section -->
    <div class="container my-5 p-5">
      <div class="row align-items-center">
        <div class="col-md-6">
          <h1 class="fw-bold display-4">Temp Number for <span class="text-warning servicename"></span></h1>
          <p class="text-muted lead">
            Create a <span class="servicename"></span> account without providing your real number using temporary real-sim numbers.
            You can keep your private number secure by using a Temp Number to receive verification SMS messages online from <span class="service-name"></span>.
          </p>
        </div>
        <div class="col-md-6 d-flex rounded justify-content-center">
          <div class="form-card mx-auto p-4 mt-4 w-75">
            <form>
              <!-- Service Field -->
              <div class="mb-3">
                <label for="service" class="form-label">Service</label>
                <div class="input-group">
                  <span class="input-group-text"><i class="fa-solid fa-gear"></i></span>
                  <!-- Dropdown container -->
                  <select id="try_service" class="form-select">
                    <option value="" disabled selected>Select a service</option>
                    <option value="telegram">Telegram</option>
                    <option value="whatsapp">WhatsApp</option>
                  </select>
                </div>
              </div>

              <!-- Country Field -->
              <div class="mb-3">
                <label for="country" class="form-label">Country</label>
                <div class="input-group">
                  <span class="input-group-text"><i class="fa-solid fa-gear"></i></span>
                  <!-- Dropdown container -->
                  <select id="try_country" class="form-select">
                    <option value="" disabled selected>Select a country</option>
                  </select>
                </div>
              </div>

              <!-- Submit Button -->
              <button type="submit" class="btn btn-primary-custom text-white btn-lg w-100 fs-6" id="submit-btn">
                Get Number â†’
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!-- What is WhatsApp Section -->
    <div class="container my-5">
      <div class="row align-items-center service-bg-light rounded service-shadow p-4">
        <div class="col-auto">
