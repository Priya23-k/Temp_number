    <script>
      // Function to get query parameter from the URL
      function getQueryParam(param) {
      const urlParams = new URLSearchParams(window.location.search);
      return urlParams.get(param);
  }

  // Redirect function
  function redirectToCombines(countryid) {
      const serviceid = getQueryParam('serviceid'); // Get countryid from URL

      if (!serviceid) {
          console.error("service ID not found in the URL.");
          alert("Please select a service first."); // Optional: Alert the user
          return;
      }

      // Construct the URL for redirection
      const url = `/views/combine.ejs?serviceid=${serviceid}&countryid=${countryid}`;
      window.location.href = url;
  }
    </script>
